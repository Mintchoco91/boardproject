<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.project.boardproject.cm.service.impl.CmDAO">
 
<!-- property : vo에서 변수명.  column : DB상 컬럼명  -->
 <resultMap id="BoardVOarr" type="BoardVO">
 	<result property="idx" column="idx"/>
 	<result property="boardId" column="boardId"/>
 	<result property="title" column="title"/>
 	<result property="contents" column="contents"/> 	
 	<result property="delYn" column="delYn"/>
 	<result property="atchYn" column="atchYn"/>
 	<result property="readCnt" column="readCnt"/> 	
 	<result property="rgtId" column="rgtId"/>
 	<result property="rgtDtm" column="rgtDtm"/>
 	<result property="updId" column="updId"/>
 	<result property="updDtm" column="updDtm"/>
 </resultMap>

	<select id="tempsql_001" resultType="java.lang.String">
		SELECT name FROM boardproject.temptbl
	</select>
	
	<select id="kwboardInq_001" resultMap="BoardVOarr" parameterType="BoardVO">
		SELECT 
			idx
			,boardId
			,title
			,contents
			,delYn
			,atchYn
			,readCnt
			,rgtId
			,rgtDtm
			,updId
			,updDtm
		FROM boardproject.board
	</select>
	
	<insert id="kwboardWrite_001" parameterType="boardVO">
		INSERT INTO boardproject.Board (
		boardId
		,title
		,contents
		,delYn
		,atchYn
		,readCnt
		,rgtId
		,rgtDtm)
		VALUES (
		'1'
		,#{title}
		,#{contents}
		,'N'
		,'N'
		,0
		,#{rgtId}
		,DATE_FORMAT(now(), '%Y%m%d%H%i%s')
		)
	</insert>
	
	
	<insert id="chboardInsert_001" parameterType="BoardVO">
		INSERT INTO /* chboardInsert*/
		boardproject.board (
		boardId
		, title
		, contents
		, delYn
		, atchYn
		, readCnt
		, rgtId
		, rgtDtm) 
		values (
		#{boardId}
		, #{title}
		, #{contents}
		, 'N'
		, 'N'
		, 0
		, #{rgtId}
		, DATE_FORMAT(now(),'%Y%m%d%H%i%s')) 
		</insert>
	 
	<select id="chboardGetList_001" parameterType="HashMap" resultMap="BoardVOarr" >
	<![CDATA[
				SELECT * FROM BOARDPROJECT.BOARD ORDER BY IDX DESC
		LIMIT #{startNo}, #{endNo}	
		]]>
	</select>
	
	<select id="chboardgetBoardCnt_001" parameterType="BoardVO" resultType="int">
		SELECT /*chboardgetBoardCnt_001*/
		COUNT(*) 
		FROM BOARDPROJECT.BOARD
	</select>
	
	<delete id="chboardDelete_001"  parameterType="BoardVO">
		DELETE   /* chboardDelete_001*/
		FROM BOARDPROJECT.BOARD
		WHERE IDX=#{idx}
	
	</delete>
	
	<insert id="chboardUpdateReadCnt_001" parameterType="int">
		UPDATE /*chboardUpdateReadCnt_001 */
		BOARDPROJECT.BOARD
		SET READCNT = READCNT+1
		WHERE IDX=#{idx}
	
	</insert>
	<select id="chboardDetail_001" parameterType="BoardVO" resultMap="BoardVO">
			SELECT 
			IDX
			,BOARDID
			,TITLE
			,CONTENTS
			,DELYN
			,ATCHYN
			,READCNT
			,RGTID
			,RGTDTM
			,UPDID
			,UPDDTM
		FROM BOARDPROJECT.BOARD
		WHERE IDX= #{idx}
	
	</select>
	
</mapper>
